{
  "name": "cryptomon-plasma-sidechain",
  "version": "1.0.0",
  "private": true,
  "main": "dist/app.js",
  "scripts": {
    "compile": "better-npm-run compile",
    "test": "better-npm-run test",
    "start": "better-npm-run compile && better-npm-run run",
    "debug": "better-npm-run debug",
    "run": "better-npm-run run"
  },
  "betterScripts": {
    "start": {
      "command": "tsc && copyfiles src/**/*.json dist/ && node dist/src/app.js",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "compile": {
      "command": "tsc && copyfiles src/**/*.json dist/",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "test": {
      "command": "tsc && jest --runInBand --verbose",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "run": {
      "command": "node dist/src/app.js",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "debug": {
      "command": "node --inspect-brk=9229 dist/src/app.js",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    }
  },
  "keywords": [],
  "author": "epord",
  "dependencies": {
    "@types/async": "^3.0.3",
    "@types/ethereumjs-abi": "^0.6.3",
    "@types/express": "^4.17.1",
    "@types/mongoose": "^5.5.18",
    "@types/socket.io": "^2.1.4",
    "async": "^3.2.2",
    "better-npm-run": "^0.1.1",
    "bignumber.js": "^8.1.1",
    "bn.js": "^5.0.0",
    "body-parser": "^1.18.3",
    "compression": "^1.7.4",
    "copyfiles": "^2.1.1",
    "debug": "^4.1.1",
    "ethereumjs-abi": "^0.6.8",
    "ethereumjs-util": "^6.1.0",
    "ethers": "^4.0.27",
    "http-status-codes": "^1.3.2",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "mongoose": "^5.5.5",
    "mongoose-bignumber": "^1.1.0",
    "morgan": "^1.9.1",
    "node-gyp": "^5.0.3",
    "q": "^1.5.1",
    "rlp": "^2.2.3",
    "socket.io": "^2.3.0",
    "supports-color": "^6.1.0",
    "web3": "1.0.0-beta.52",
    "web3-eth-accounts": "1.0.0-beta.52"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "jest": "^24.9.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "tslint": "^5.18.0",
    "typescript": "^3.6.3"
  }
}
